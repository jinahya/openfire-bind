<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN' 'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>

<mapper namespace="com.github.jinahya.openfire.persistence.ibatis.mapper.OfPropertyMapper">
    
  <resultMap id="resultMap" type="com.github.jinahya.openfire.persistence.OfProperty"
             extends="com.github.jinahya.openfire.persistence.ibatis.mapper.OfPropMapper.resultMap">
    <!--
    <id column="name" property="name"/>
    <result column="propValue" property="propValue"/>
    -->
  </resultMap>

  <!--
  <sql id="sqlColumns">
    ${alias}name      AS ${prefix}name,
    ${alias}propValue AS ${prefix}propValue
  </sql>
  -->

  <select id="selectOne01" resultMap="resultMap" fetchSize="1">
    SELECT
    <include refid="com.github.jinahya.openfire.persistence.ibatis.mapper.OfPropMapper.sqlColumns">
      <property name="alias" value=""/>
      <property name="prefix" value=""/>
    </include>
    FROM
    <include refid="com.github.jinahya.openfire.persistence.ibatis.mapper.OfMappedMapper.sqlTable">
      <property name="table" value="ofProperty"/>
    </include>
    WHERE name = #{name}
  </select>

  <select id="selectList01" resultMap="resultMap">
    SELECT
    <include refid="com.github.jinahya.openfire.persistence.ibatis.mapper.OfPropMapper.sqlColumns">
      <property name="alias" value=""/>
      <property name="prefix" value=""/>
    </include>
    FROM
    <include refid="com.github.jinahya.openfire.persistence.ibatis.mapper.OfMappedMapper.sqlTable">
      <property name="table" value="ofProperty"/>
    </include>
    ORDER BY
    name
    <include refid="com.github.jinahya.openfire.persistence.ibatis.mapper.OfMappedMapper.sqlAscending"/>
  </select>

</mapper>
