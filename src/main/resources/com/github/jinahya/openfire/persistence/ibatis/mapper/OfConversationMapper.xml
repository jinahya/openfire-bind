<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN' 'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>

<mapper namespace="com.github.jinahya.openfire.persistence.ibatis.mapper.OfConversationMapper">
    
  <resultMap id="resultMap" type="com.github.jinahya.openfire.persistence.OfConversation">
    <id column="conversationID" property="conversationId"/>
    <result column="room" property="room"/>
    <result column="isExternal" property="external"/>
    <result column="startDate" property="startDate"
            typeHandler="com.github.jinahya.openfire.persistence.ibatis.type.DateMillisTypeHandler"/>
    <result column="lastActivity" property="lastActivity"
            typeHandler="com.github.jinahya.openfire.persistence.ibatis.type.DateMillisTypeHandler"/>
    <result column="messageCount" property="messageCount"/>
  </resultMap>

  <sql id="sqlColumns">
    ${alias}conversationID AS ${prefix}conversationID,
    ${alias}room           AS ${prefix}room,
    ${alias}isExternal     AS ${prefix}isExternal,
    ${alias}startDate      AS ${prefix}startDate,
    ${alias}lastActivity   AS ${prefix}lastActivity,
    ${alias}messageCount   AS ${prefix}messageCount
  </sql>

  <select id="selectOne01" resultMap="resultMap" fetchSize="1">
    SELECT
    <include refid="sqlColumns">
      <property name="alias" value=""/>
      <property name="prefix" value=""/>
    </include>
    FROM
    <include refid="com.github.jinahya.openfire.persistence.ibatis.mapper.OfMappedMapper.sqlTable">
      <property name="table" value="ofConversation"/>
    </include>
    WHERE
    conversationID = #{conversationId}
  </select>

  <select id="selectList01" resultMap="resultMap">
    SELECT
    <include refid="sqlColumns">
      <property name="alias" value=""/>
      <property name="prefix" value=""/>
    </include>
    FROM
    <include refid="com.github.jinahya.openfire.persistence.ibatis.mapper.OfMappedMapper.sqlTable">
      <property name="table" value="ofConversation"/>
    </include>
    WHERE 1 = 1
    <if test="room != null">
      AND room = #{room}
    </if>
    ORDER BY
    <if test="room == null">
      room
      <include refid="com.github.jinahya.openfire.persistence.ibatis.mapper.OfMappedMapper.sqlAscending"/>
      ,
    </if>
    <choose>
      <when test="natural">
        startDate
        <include refid="com.github.jinahya.openfire.persistence.ibatis.mapper.OfMappedMapper.sqlAscending"/>
        <!--
        <choose>
          <when test="ascending">
            startDate ASC
          </when>
          <otherwise>
            lastActivity ASC
          </otherwise>
        </choose>
        -->
      </when>
      <otherwise>
        conversationID
        <include refid="com.github.jinahya.openfire.persistence.ibatis.mapper.OfMappedMapper.sqlAscending"/>
      </otherwise>
    </choose>
  </select>

</mapper>
